{
    "comments": {
        "lineComment": ";",
        "blockComment": [ ";*", "*;" ]
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onEnterRules": [
        {
            "beforeText": "^.+",
            "afterText": "\\s*\\)$",
            "action": { "indent": "indentOutdent" }
        }
      ]
}