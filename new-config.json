{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["{", "}"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onEnterRules": [
        {
            "beforeText": "^.+",
            "afterText": "\\s*\\)$",
            "action": { "indent": "indentOutdent" }
        },
        {
            "beforeText": "^.*(\\)|if|then|else|elseif|begin|begin_random|repeat)$",
            "action": { "indent": "indent" }
        }
    ]
}
