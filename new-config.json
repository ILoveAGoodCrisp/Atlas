{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "onEnterRules": [
        {
        "beforeText": ".+",
        "afterText": "\\)$",
        "action": { "indent": "indentOutdent" }
        },
        {
        "beforeText": "^\\s*.*?[^;]\\s*$(?<!(\\bend\\b|\\s+))",
        "action": { "indent": "indent" }
        }
    ]
}
