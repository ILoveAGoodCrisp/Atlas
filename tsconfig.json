{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],        // ← REMOVE "dom"
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,     // ← important
    "types": ["node", "vscode"]
  },
  "include": ["src"]
}
