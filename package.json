{
    "name": "atlas",
    "displayName": "Atlas",
    "publisher": "Crisp",
    "author": {
		"name": "Crisp"
	},
    "qna": "false",
    "description": "A Visual Studio Code extension which provides syntax highlighting, intellisense integration, function definitions/parameters, value type listings, and other various support for Halo Script.",
    "keywords": [ "hsc", "haloscript", "language", "blamscript", "halo3script", "h3script", "theme", "atlas", "halo script", "halo mod tools"],
    "galleryBanner": {
		"color": "#007acc",
		"theme": "dark"
	},
    "version": "1.0.0",
    "license": "MIT",
    "icon": "atlas_icon_small.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ILoveAGoodCrisp/Atlas"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Programming Languages",
        "Language Packs",
        "Themes"
    ],
    "contributes": {
        "languages": [{
            "id": "hsc",
            "aliases": ["halo-script", "hsc"],
            "extensions": [".hsc"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "hsc",
            "scopeName": "source.hsc",
            "path": "./syntaxes/hsc.tmLanguage.json"
        }],
        "themes": [
            {
                "label": "Atlas",
                "uiTheme": "vs-dark",
                "path": "./themes/Atlas-color-theme.json"
            }
        ],
        "snippets": [
			{
				"language": "hsc",
				"path": "./snippets.json"
			}
		]
        
    }
}