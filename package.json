{
    "name": "atlas",
    "displayName": "HaloScript",
    "publisher": "Crisp",
    "author": {
        "name": "Crisp"
    },
    "description": "HaloScript provides comprehensive language support for the Halo Scripting language used in the Halo: MCC Mod Tools",
    "keywords": [
        "hsc",
        "haloscript",
        "language",
        "blamscript",
        "haloce",
        "halo1",
        "mcc",
        "halo 2",
        "halo 3",
        "halo odst",
        "halo reach",
        "odst",
        "reach",
        "halo 4",
        "halo 2a",
        "atlas",
        "halo script",
        "halo mod tools"
    ],
    "galleryBanner": {
        "color": "#eff1f3",
        "theme": "light"
    },
    "version": "2.1.0",
    "license": "MIT",
    "icon": "icons/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ILoveAGoodCrisp/Atlas"
    },
    "engines": {
        "vscode": "^1.61.0",
        "node": "^20.5.1"
    },
    "main": "./out/extension",
    "activationEvents": [],
    "categories": [
        "Programming Languages",
        "Language Packs"
    ],
    "contributes": {
        "commands": [
            {
                "command": "atlas.compileScenarioScripts",
                "title": "Compile Scenario Scripts"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+shift+c",
                "command": "atlas.compileScenarioScripts",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "atlas.compileScenarioScripts",
                    "when": "editorLangId == hsc4"
                }
            ],
            "editor/context": [
                {
                    "command": "atlas.compileScenarioScripts",
                    "when": "editorLangId == hsc4"
                }
            ]
        },
        "languages": [
            {
                "id": "hsc4",
                "aliases": [
                    "Halo 4 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./new-config.json",
                "icon": {
                    "dark": "./icons/h4.svg",
                    "light": "./icons/h4.svg"
                }
            },
            {
                "id": "hscr",
                "aliases": [
                    "Halo Reach Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json",
                "icon": {
                    "dark": "./icons/hr.svg",
                    "light": "./icons/hr.svg"
                }
            },
            {
                "id": "hsco",
                "aliases": [
                    "Halo ODST Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json",
                "icon": {
                    "dark": "./icons/h3o.svg",
                    "light": "./icons/h3o.svg"
                }
            },
            {
                "id": "hsc3",
                "aliases": [
                    "Halo 3 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json",
                "icon": {
                    "dark": "./icons/h3.svg",
                    "light": "./icons/h3.svg"
                }
            },
            {
                "id": "hsc2",
                "aliases": [
                    "Halo 2 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json",
                "icon": {
                    "dark": "./icons/h2.svg",
                    "light": "./icons/h2.svg"
                }
            },
            {
                "id": "hsc1",
                "aliases": [
                    "Halo 1 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json",
                "icon": {
                    "dark": "./icons/h1.svg",
                    "light": "./icons/h1.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "hsc4",
                "scopeName": "source.hsc4",
                "path": "./syntaxes/hsc4.tmLanguage.json"
            },
            {
                "language": "hscr",
                "scopeName": "source.hscr",
                "path": "./syntaxes/hscr.tmLanguage.json"
            },
            {
                "language": "hsco",
                "scopeName": "source.hsco",
                "path": "./syntaxes/hsco.tmLanguage.json"
            },
            {
                "language": "hsc3",
                "scopeName": "source.hsc3",
                "path": "./syntaxes/hsc3.tmLanguage.json"
            },
            {
                "language": "hsc2",
                "scopeName": "source.hsc2",
                "path": "./syntaxes/hsc2.tmLanguage.json"
            },
            {
                "language": "hsc1",
                "scopeName": "source.hsc1",
                "path": "./syntaxes/hsc1.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "scope": "hsc4",
                "language": "hsc4",
                "path": "./snippets/H4.json"
            },
            {
                "scope": "hscr",
                "language": "hscr",
                "path": "./snippets/HR.json"
            },
            {
                "scope": "hsco",
                "language": "hsco",
                "path": "./snippets/HO.json"
            },
            {
                "scope": "hsc3",
                "language": "hsc3",
                "path": "./snippets/H3.json"
            },
            {
                "scope": "hsc2",
                "language": "hsc2",
                "path": "./snippets/H2.json"
            },
            {
                "scope": "hsc1",
                "language": "hsc1",
                "path": "./snippets/H1.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^10.17.60",
        "@types/vscode": "^1.61.0",
        "esbuild": "^0.19.3",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "vsce": "^2.15.0",
        "vscode-languageserver": "^8.1.0",
        "vscode-languageserver-textdocument": "^1.0.8"
    }
}
