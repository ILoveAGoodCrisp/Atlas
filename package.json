{
    "name": "atlas",
    "displayName": "HaloScript",
    "publisher": "Crisp",
    "author": {
        "name": "Crisp"
    },
    "description": "A Visual Studio Code extension for Halo Script which provides syntax highlighting, intellisense integration, snippets, and other various support.",
    "keywords": [
        "hsc",
        "haloscript",
        "language",
        "blamscript",
        "halo3script",
        "h3script",
        "theme",
        "atlas",
        "halo script",
        "halo mod tools"
    ],
    "galleryBanner": {
        "color": "#007acc",
        "theme": "dark"
    },
    "version": "1.0.1",
    "license": "MIT",
    "icon": "atlas_icon_small.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ILoveAGoodCrisp/Atlas"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "main": "./out/extension",
    "categories": [
        "Programming Languages",
        "Language Packs",
        "Themes"
    ],
    "contributes": {
        "commands": [
            {
                "command": "atlas.compileScenarioScripts",
                "title": "Compile Scenario Scripts"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+shift+c",
                "command": "atlas.compileScenarioScripts",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "atlas.compileScenarioScripts",
                    "when": "editorLangId == hsc4"
                }
            ]
        },
        "languages": [
            {
                "id": "hsc4",
                "aliases": [
                    "Halo 4 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./new-config.json"
            },
            {
                "id": "hscr",
                "aliases": [
                    "Halo Reach Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json"
            },
            {
                "id": "hsco",
                "aliases": [
                    "Halo ODST Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json"
            },
            {
                "id": "hsc3",
                "aliases": [
                    "Halo 3 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json"
            },
            {
                "id": "hsc2",
                "aliases": [
                    "Halo 2 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json"
            },
            {
                "id": "hsc1",
                "aliases": [
                    "Halo 1 Script",
                    "HaloScript"
                ],
                "extensions": [
                    ".hsc"
                ],
                "configuration": "./classic-config.json"
            }
        ],
        "grammars": [
            {
                "language": "hsc4",
                "scopeName": "source.hsc4",
                "path": "./syntaxes/hsc4.tmLanguage.json"
            },
            {
                "language": "hscr",
                "scopeName": "source.hscr",
                "path": "./syntaxes/hscr.tmLanguage.json"
            },
            {
                "language": "hsco",
                "scopeName": "source.hsco",
                "path": "./syntaxes/hsco.tmLanguage.json"
            },
            {
                "language": "hsc3",
                "scopeName": "source.hsc3",
                "path": "./syntaxes/hsc3.tmLanguage.json"
            },
            {
                "language": "hsc2",
                "scopeName": "source.hsc2",
                "path": "./syntaxes/hsc2.tmLanguage.json"
            },
            {
                "language": "hsc1",
                "scopeName": "source.hsc1",
                "path": "./syntaxes/hsc1.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "Atlas",
                "uiTheme": "vs-dark",
                "path": "./themes/Atlas-color-theme.json"
            }
        ],
        "snippets": [
            {
                "scope": "hsc4",
                "language": "hsc4",
                "path": "./snippets/H4.json"
            },
            {
                "scope": "hscr",
                "language": "hscr",
                "path": "./snippets/HR.json"
            },
            {
                "scope": "hsco",
                "language": "hsco",
                "path": "./snippets/HO.json"
            },
            {
                "scope": "hsc3",
                "language": "hsc3",
                "path": "./snippets/H3.json"
            },
            {
                "scope": "hsc2",
                "language": "hsc2",
                "path": "./snippets/H2.json"
            },
            {
                "scope": "hsc1",
                "language": "hsc1",
                "path": "./snippets/H1.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "vscode": "^1.1.37",
        "vscode-languageserver": "^8.1.0",
        "vscode-languageserver-textdocument": "^1.0.8"
    },
    "devDependencies": {
        "@types/node": "^20.6.0",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "typescript": "^5.2.2"
    }
}
